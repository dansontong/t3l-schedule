.content {
  position: relative;
  width: 100%;
  overflow: hidden;
}
.list-item{
  position: relative;
  background: #fff;
  width: 100%;
  margin-bottom: 20rpx;
  height: 130rpx;
  transition: left 0.3s;
  -webkit-transition: left 0.3s;
}
.item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  padding-bottom: 15rpx;
  overflow: hidden;
}
.item .image {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.item .image image {
  vertical-align: top;
  width: 100rpx;
  height: 100rpx;
}
.item .info {
  display: inline-block;
  font-size: 30rpx;
  color: #999;
}
.item .info .title {
  margin: 15rpx 0;
}
.item-option{
  height: 130rpx;
  line-height: 130rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  display: flex;
  color: #fff;
  align-items: center;
  top: 0;
  justify-content: center;
  background: #e44022;
}
